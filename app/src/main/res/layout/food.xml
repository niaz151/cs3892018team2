<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="#f2f2f2"
    tools:context="ahmed.niaz.chinatown_tour.FoodActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/custom_main_menu_header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Restaurant Text View -->
    <TextView
        android:id="@+id/category1_title_restaurant"
        android:layout_width="144dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/category1_name"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <!-- Recycler View 1 Restaurants -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="348dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category1_title_restaurant">

    </android.support.v7.widget.RecyclerView>

    <!-- Fast Food Text View -->
    <TextView
        android:id="@+id/category2_title_restaurant"
        android:layout_width="144dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:text="@string/category2_name"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview" />

    <!-- Recycler Viewer 2 Fast Food -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview2"
        android:layout_width="348dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category2_title_restaurant">

    </android.support.v7.widget.RecyclerView>

    <!-- Sweets Text View -->
    <TextView
        android:id="@+id/category3_title_restaurant"
        android:layout_width="144dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:text="@string/category3_name"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerview2" />

    <!-- Recycler View 3 Sweets -->
    <android.support.v7.widget.RecyclerView
        android:layout_width="348dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/category3_title_restaurant"
        app:layout_constraintStart_toStartOf="parent">
    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>



